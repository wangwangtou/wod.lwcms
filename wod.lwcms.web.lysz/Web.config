  有关如何配置 ASP.NET 应用程序的详细消息，请访问
  http://go.microsoft.com/fwlink/?LinkId=169433
  -->
<configuration>
  <appSettings>
    <add key="siteKeys" value="default,cms"/>
    <add key="dataPath" value=""/>
  </appSettings>
  <system.web>
    <compilation debug="true"/>
    <authentication mode="Forms">
      <forms loginUrl="management/login.aspx" defaultUrl="management/index.aspx"
             name=".wod.lwcms"  >
      </forms>
    </authentication>
    <httpModules>
      <add name="authModule" type="wod.lwcms.web.authModule, wod.lwcms.core"/>
    </httpModules>
  </system.web>
  <system.webServer>
    <modules>
      <add type="wod.lwcms.web.authModule, wod.lwcms.core" name="authModule"/>
    </modules>
  </system.webServer>
  <location path="management">
    <system.web>
      <authorization>
        <allow roles="admin"/>
        <deny users="*"/>
      </authorization>
    </system.web>
  </location>
  <location path="management/scripts">
    <system.web>
      <authorization>
        <allow users="*"/>
      </authorization>
    </system.web>
  </location>
</configuration>